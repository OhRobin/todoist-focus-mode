---
layout: base.njk
permalink:
  dynamic: "/secure/"
secure:
  unauthenticatedRedirect: "/"
---
<a href="/">Home</a>
{% set tasks = user | sort(false, true, content) %}
{% if user %}
  {% set id = eleventy.serverless.query.id | int %}
  <p>Your next task</p>
  {% renderTemplate "njk, md" %}
  {{ tasks[id].content }}
  {% endrenderTemplate %}
  <a href="/secure/?id={{id - 1}}">Previous</a>
  <a href="/secure/?id={{id + 1}}">Next</a>

  <!-- Show Logout form -->
  <hr>
  {% include "logout.njk" %}
{% else %}
  <!-- Show Login form -->
  <a href="/">Login</a>
{% endif %}

{# {{ token }} #}